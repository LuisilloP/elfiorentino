---
import Footer from "../components/layout/Footer.astro";
import Header from "../components/layout/Header.astro";
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/indexImage/Logo.png" />
    <meta name="generator" content={Astro.generator} />
    <meta name="author" content="Mueblería El Fiorentino" />
    <meta
      name="description"
      content="Mueblería El Fiorentino, más de 20 años diseñando, confeccionando y armando mobiliario en línea plana para hogares, empresas e instituciones. Trabajamos en toda la Cuarta Región, ofreciendo calidad y personalización a tu medida. Ubicados en Cuesta El Hinojo, Punitaqui."
    />
    <meta
      name="keywords"
      content="muebles a medida, mueblería, mobiliario personalizado, muebles para hogar, muebles para oficina, muebles en Punitaqui, muebles en Coquimbo, muebles en La Serena, muebles en Ovalle, muebles en la Cuarta Región"
    />
    <meta
      property="og:title"
      content="Mueblería El Fiorentino - Mobiliario Personalizado en la Cuarta Región"
    />
    <meta
      property="og:description"
      content="Con más de 20 años de experiencia, ofrecemos muebles a medida para hogares, oficinas e instituciones. Trabajamos en toda la Cuarta Región."
    />
    <meta
      property="og:image"
      content="https://muebleriaelfiorentino.cl/indexImage/Logo.png"
    />

    <title>{title}</title>
  </head>
  <body class="m-auto font-b">
    <a
      target="__blank"
      href={`https://wa.me/56974061736?text=Hola, estoy interesado en sus servicios.`}
      class="w-16 fixed bottom-20 sm:bottom-10 rounded-full right-4 z-50 cursor-pointer hover:opacity-80"
      ><img
        src={"/socialmedia/whatsappButton.svg"}
        alt="btn_whatsapp"
        class="rounded-full"
      /></a
    ></body
  >
  <Header />
  <slot />
  <Footer />
</html>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Barlow:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap");
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
<script>
  import { navFunction } from "../../public/code/navFunction";
  navFunction();
</script>

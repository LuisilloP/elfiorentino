---
import {
  dataHomeCatalog,
  dataHomeTwoCatalog,
} from "../../services/getProducts";
import ProductCard from "../products/ProductCard.astro";
const formater = Intl.NumberFormat("es-ES");
---

<section id="catalogo" class="xl:w-[1200px] m-auto font-barlow px-5">
  <div class="items-center justify-center flex flex-col">
    <h1 class="text-3xl font-bold text-neutral-800">Mas Pedidos</h1>
    <hr class="w-48 h-1 bg-blue-400 border-0 rounded-sm my-2" />
  </div>
  <div>
    <div>
      <h1 class="text-2xl pt-3 font-semibold text-blue-500">Hogar</h1>
      <div
        class="pt-4 lg:px-0 grid grid-cols-1 lg:grid-cols-4 md:gap-5"
        id="container-more-request"
      >
        {
          dataHomeCatalog.map((product) => {
            const photos = product.photos as any;
            return (
              <ProductCard
                name={product.name}
                price={product.price}
                photos={photos}
                section="HI"
              />
            );
          })
        }
      </div>
    </div>
    <div>
      <h1 class="text-3xl pt-3 font-semibold text-blue-500">cocina / closet</h1>
      <div
        class="pt-4 lg:px-0 grid grid-cols-1 lg:grid-cols-2 md:gap-5"
        id="container-more-request"
      >
        {
          dataHomeTwoCatalog.map((product) => {
            const photos = product.photos as any;
            return (
              <ProductCard
                name={product.name}
                price={product.price}
                photos={photos}
                section="CC"
              />
            );
          })
        }
      </div>
    </div>
    <div>
      <div>
        <h1 class="text-2xl pt-3 font-semibold text-blue-500">
          Instituciones y empresas
        </h1>
        <div
          class="pt-4 lg:px-0 grid grid-cols-1 lg:grid-cols-4 md:gap-5"
          id="container-more-request"
        >
          {
            dataHomeCatalog.map((product) => {
              const photos = product.photos as any;
              return (
                <ProductCard
                  name={product.name}
                  price={product.price}
                  photos={photos}
                  section="HI"
                />
              );
            })
          }
        </div>
      </div>
    </div>
  </div>
</section>

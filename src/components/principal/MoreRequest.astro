---
import { dataMoreRequest } from "../../services/getProducts";
import Container from "../layout/Container.astro";
import SectionHeader from "../layout/SectionHeader.astro";
import ProductCard from "../products/ProductCard.astro";
---

<section class="section-shell surface-quiet" id="mas-pedidos">
  <Container class="flex flex-col gap-8">
    <div class="reveal-on-scroll">
      <SectionHeader
        eyebrow="Selección destacada"
        title="Más pedidos"
        subtitle="Proyectos a medida que nuestros clientes nos piden una y otra vez."
      />
    </div>
    <div
      class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 reveal-on-scroll reveal-delay-200"
    >
      {
        dataMoreRequest.map((product) => {
          const photos = product.photos as any;
          return (
            <ProductCard
              name={product.name}
              slug={product.slug}
              price={product.price}
              photos={photos}
              section="MR"
              id={product.id}
            />
          );
        })
      }
    </div>
  </Container>
</section>

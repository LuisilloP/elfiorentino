---
const urlSponsor = [
  "supported/carabineros.png",
  "supported/bomberos.png",
  "supported/byo.png",
  "supported/cecli.png",
  "supported/prodelca.svg",
  "supported/sercotec.png",
];
---

<section class="pt-10 m-auto px-5">
  <div class="items-center justify-center flex flex-col">
    <h1 class="text-3xl font-bold text-neutral-800">Nos avalan</h1>
    <hr class="w-48 h-1 bg-blue-400 border-0 rounded-sm my-2" />
  </div>
  <div class="flex gap-5 m-auto justify-center">
    {
      urlSponsor.map((value, i) => (
        <div class="slide ">
          <img
            src={value}
            alt=""
            width={200}
            height={200}
            class="h-[200px] w-[200px] object-contain "
          />
        </div>
      ))
    }
  </div>
</section>

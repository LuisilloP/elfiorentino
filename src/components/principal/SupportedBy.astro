---
import Container from "../layout/Container.astro";
import SectionHeader from "../layout/SectionHeader.astro";

const sponsors = [
  { src: "/supported/bomberos.png", alt: "Cuerpo de Bomberos" },
  { src: "/supported/byo.png", alt: "BYO" },
  { src: "/supported/cecli.png", alt: "Colegio CECLI" },
  { src: "/supported/prodelca.svg", alt: "Prodelca" },
  { src: "/supported/sercotec.png", alt: "Sercotec" },
];
---

<section class="section-shell" id="nos-avalan">
  <Container class="flex flex-col gap-6">
    <div class="reveal-on-scroll">
      <SectionHeader
        eyebrow="ConfÃ­an en nosotros"
        title="Nos avalan"
        subtitle="Marcas y organizaciones que han elegido nuestros muebles a medida."
      />
    </div>
    <div class="surface-card card-bleed p-6 reveal-on-scroll reveal-delay-100">
      <div
        class="grid grid-cols-2 items-center gap-4 sm:grid-cols-3 lg:grid-cols-5"
      >
        {
          sponsors.map((value) => (
            <div class="flex items-center justify-center rounded-lg bg-sand/60 p-4 hover:scale-105 transition-transform duration-300">
              <img
                src={value.src}
                alt={value.alt}
                width="200"
                height="80"
                loading="lazy"
                decoding="async"
                class="h-14 w-auto object-contain opacity-80 grayscale transition hover:opacity-100 hover:grayscale-0"
              />
            </div>
          ))
        }
      </div>
    </div>
  </Container>
</section>

---
interface Props {
  title: string;
  subtitle?: string;
  eyebrow?: string;
  align?: "left" | "center";
}

const { title, subtitle, eyebrow, align = "center" } = Astro.props;
const alignment =
  align === "left" ? "items-start text-left" : "items-center text-center";
---

<div class={`flex flex-col gap-3 ${alignment}`}>
  {eyebrow && (
    <span class="text-sm uppercase tracking-[0.24em] text-muted font-semibold">
      {eyebrow}
    </span>
  )}
  <div class={`flex flex-col gap-2 ${alignment}`}>
    <h2 class="text-heading text-3xl md:text-4xl font-semibold text-ink leading-[1.1]">
      {title}
    </h2>
    <div class={`divider ${align === "center" ? "" : "self-start"}`} aria-hidden="true"></div>
    {subtitle && (
      <p class="text-base md:text-lg text-ink-soft max-w-2xl">
        {subtitle}
      </p>
    )}
  </div>
</div>

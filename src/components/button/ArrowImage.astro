const { direction } = Astro.props;
console.log(direction);
const id = direction === "left" ? "prev" : "next";
---

<svg
  width="60px"
  height="60px"
  viewBox="0 0 24 24"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  id={id}
  class={` absolute top-1/2 -translate-y-1/2 transform  p-2  ${direction == "left" ? "left-0  rotate-180" : "right-0"} cursor-pointer `}
>

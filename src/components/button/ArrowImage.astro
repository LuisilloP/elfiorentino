---
const { direction } = Astro.props;

const id = direction === "left" ? "prev" : "next";
const label = direction === "left" ? "Imagen anterior" : "Imagen siguiente";
---
<button
  id={id}
  type="button"
  aria-label={label}
  class={`slider-arrow ${direction === "left" ? "slider-arrow--left" : "slider-arrow--right"}`}
>
  <svg
    width="20"
    height="20"
    viewBox="0 0 24 24"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
  >
    <path
      d="M9 5l7 7-7 7"
      stroke="currentColor"
      stroke-width="1.5"
      stroke-linecap="round"
      stroke-linejoin="round"
    />
  </svg>
</button>

---
import Button from "./Button.astro";

interface btnProps {
  productName?: string;
  textBtn: string;
  class?: string;
  style?: string;
}

const { productName, textBtn, class: className = "", style } = Astro.props;

const message = productName
  ? `Hola, quiero cotizar ${productName}.`
  : "Hola, estoy interesado en sus servicios.";
const href = `https://wa.me/56974061736?text=${encodeURIComponent(message)}`;
---

<Button
  href={href}
  target="_blank"
  rel="noreferrer"
  label={textBtn || "Hablemos por WhatsApp"}
  variant="whatsapp"
  class={`w-full sm:w-auto ${className}`.trim()}
  style={style}
>
  <img
    slot="icon"
    class="w-5 h-5"
    src="/socialmedia/whatsappButton.svg"
    alt="WhatsApp"
    loading="lazy"
    decoding="async"
  />
</Button>

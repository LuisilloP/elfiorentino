---
// Props que recibir√° el componente
export interface ProductCardProps {
  name: string;
  price: number;

  photos: {
    urls: string[];
  };
}

const { name, price, photos, section } = Astro.props;
const formater = Intl.NumberFormat("es-ES");
---

<a class="font-bold cursor-pointer" href="">
  <img
    class={`w-[100vw] h-[80vw] rounded-md ${section == "MR" ? " lg:h-[350px] " : section == "CC" ? "lg:w-[100vw] lg:h-[350px]" : "lg:h-[300px]"}`}
    src={import.meta.env.URL_IMAGES + photos.urls[0]}
    0
    alt={name}
  />
  <h3 class="text-neutral-500 text-xl pt-2">
    {name[0].toUpperCase() + name.substring(1)}
  </h3>
  <h3 class="text-neutral-800">Desde: ${formater.format(price)}</h3>
  <hr class="h-[.5px] my-4 bg-gray-400 border-0 md:hidden" />
</a>
